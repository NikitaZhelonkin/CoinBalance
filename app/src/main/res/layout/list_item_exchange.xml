<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        app:cardElevation="8dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/exchange_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:contentDescription="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/kraken" />

            <TextView
                android:id="@+id/exchange_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/exchange_icon"
                app:layout_constraintLeft_toRightOf="@id/exchange_icon"
                app:layout_constraintRight_toLeftOf="@+id/context_menu"
                app:layout_constraintTop_toTopOf="@id/exchange_icon"
                tools:text="Kraken" />

            <TextView
                android:id="@+id/exchange_assets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/balance"
                app:layout_constraintTop_toBottomOf="@+id/exchange_icon"
                tools:text="Est. value of 5 assets:" />

            <ImageView
                android:id="@+id/context_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="12dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:src="@drawable/ic_more_vert_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/currency_balance"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="100000.2401 BTC" />

            <ru.nikitazhelonkin.coinbalance.ui.widget.TFTextView
                android:id="@+id/currency_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                app:font="@string/font_roboto_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/balance"
                app:layout_constraintTop_toBottomOf="@+id/exchange_assets"
                tools:text="$ 551.11 k" />

            <View
                android:id="@+id/status_indicator"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>
