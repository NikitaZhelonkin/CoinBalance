<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:dropDownSpinnerStyle">@style/DropDownSpinnerStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Dialog.BottomSheet</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="editTextStyle">@style/EditText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DropDownSpinnerStyle" parent="@style/Widget.AppCompat.Spinner.DropDown">
        <item name="android:padding">0dp</item>
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow"/>

    <style name="Theme.Dialog.BottomSheet" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="android:colorBackground">@color/colorDialogBackground</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowTitleStyle">@style/Dialog.Title</item>
        <item name="android:buttonBarButtonStyle">@style/Dialog.Button</item>
    </style>

    <style name="Dialog.Button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="Dialog.Title" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.Dialog.Title</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/color_surface</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Toolbar.Subtitle</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>

    <style name="TextAppearance.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextAppearance.Dialog.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.H1_Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">98sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
    </style>

    <style name="TextAppearance.H2_Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
    </style>

    <style name="TextAppearance.H3_Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">42sp</item>
        <item name="android:fontFamily">@font/eczar_regular</item>
    </style>

    <style name="TextAppearance.H4_Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextAppearance.H5_Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/eczar_regular</item>
    </style>

    <style name="TextAppearance.H6_Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextAppearance.Subtitle2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/eczar_regular</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextAppearance.Overline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
